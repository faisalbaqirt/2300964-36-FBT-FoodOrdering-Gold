  <div id="order">
    <div class="container">
      <div class="section-title text-center">
        <h3>Form Pemesanan Produk</h3>
      </div>
      <div clas="col-md-6">
        <form id="order-form">
          <label for="product_name">Nama Produk:</label>
          <select id="product_name" class="form-control"  name="product_name" required>
              <option value="paket ayam geprek">Paket Ayam Geprek</option>
              <option value="ayam geprek">Ayam Geprek</option>
          </select><br>
  
          <label for="quantity">Jumlah:</label>
          <input type="number" id="quantity" class="form-control" name="quantity" required><br>
  
          <label for="name">Nama Pemesan:</label>
          <input type="text" id="name" class="form-control" name="name" required><br>
  
          <label for="telephone">Telepon:</label>
          <input type="text" id="telephone" class="form-control" name="telephone" required><br>
  
          <label for="address">Alamat:</label>
          <input type="text" id="address" class="form-control" name="address" required><br>
  
          <button type="submit">Pesan</button>
        </form>
