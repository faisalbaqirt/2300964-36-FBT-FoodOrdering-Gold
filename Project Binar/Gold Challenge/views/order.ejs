    <script>
        // Saat dokumen siap
        $(document).ready(function() {
            // Periksa apakah tautan Home pada halaman order.html ditekan
            $('a[href="/#home"]').on('click', function(event) {
                // Hentikan perilaku tautan default
                event.preventDefault();
                
                // Gulir ke bagian 'home' di halaman utama ("/")
                $('html, body').animate({
                    scrollTop: $('#home').offset().top
                }, 800); // Durasi animasi dalam milidetik
            });
    
            // Periksa apakah tautan Menu pada halaman order.html ditekan
            $('a[href="/#menu"]').on('click', function(event) {
                // Hentikan perilaku tautan default
                event.preventDefault();
                
                // Gulir ke bagian 'menu' di halaman utama ("/")
                $('html, body').animate({
                    scrollTop: $('#menu').offset().top
                }, 800); // Durasi animasi dalam milidetik
            });
    
            $(document).ready(function() {
    // Periksa apakah URL saat ini berakhir dengan "#contact"
    if (window.location.href.endsWith("#contact")) {
        // Gulir ke elemen 'contact'
        $('html, body').animate({
            scrollTop: $('#contact').offset().top
        }, 800); // Durasi animasi dalam milidetik
    }
});

        });
    </script>
    
    <script>
       document.getElementById('order-form').addEventListener('submit', async function(event) {
            event.preventDefault();

            const product_name = document.getElementById('product_name').value;
            const quantity = parseInt(document.getElementById('quantity').value);
            const name = document.getElementById('name').value;
            const telephone = document.getElementById('telephone').value;
            const address = document.getElementById('address').value;

            try {
                const response = await fetch('/order', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        product_name,
                        quantity,
                        name,
                        telephone,
                        address
                    })
                });

                
                // Redirect to home page after successful submission
                if (response.status === 201) {
                    window.location.href = '/';
                }
            } catch (error) {
                console.error('Error:', error);
            }
        });
    </script>
